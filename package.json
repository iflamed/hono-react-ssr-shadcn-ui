{
  "name": "hono-react-ssr",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "echo \"export default false\" > ./src/config/is_prod.ts && SERVER_MODE=local vite",
    "client": "SERVER_MODE=local vite --mode client",
    "build": "$npm_execpath run version && vite build --mode client && cp -f ./dist/.vite/manifest.json ./src/lib/manifest.json && vite build",
    "preview": "node dist/index.js",
    "migrate": "drizzle-kit generate && drizzle-kit migrate",
    "deploy": "$npm_execpath run deploy:caitun && $npm_execpath run deploy:ruobiyi",
    "deploy:caitun": "SERVER_MODE=caitun $npm_execpath run build && sh ./deploy.sh -c",
    "deploy:ruobiyi": "SERVER_MODE=ruobiyi $npm_execpath run build && sh ./deploy.sh -r",
    "version": "echo \"export default `date +'%s'`\" > ./src/config/build_time.ts && echo \"export default true\" > ./src/config/is_prod.ts"
  },
  "dependencies": {
    "@date-fns/utc": "^2.1.1",
    "@hono/node-server": "^1.19.0",
    "@hono/react-renderer": "^1.0.1",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@sindresorhus/slugify": "^3.0.0",
    "axios": "^1.13.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "i18next": "^25.8.13",
    "iso-639-1": "^3.1.5",
    "lucide-react": "^0.575.0",
    "mysql2": "^3.14.1",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "react-share": "^5.2.2",
    "remarkable": "^2.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250415.0",
    "@hono/vite-build": "^1.6.2",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.25.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/remarkable": "^2.0.8",
    "autoprefixer": "^10.4.23",
    "drizzle-kit": "^0.31.4",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.2.0",
    "postcss": "^8.5.3",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rollup-preserve-directives": "^1.1.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "wrangler": "^4.56.0"
  }
}
